<table class="table table-bordered">
    <thead style="background-color:#E3E3E3">
    <tr/>
    <th>#</th>
    <th colspan="5">标题</th>
    <th>作者</th>
    <th>时间</th>
    <th>功能</th>
    </tr>
    </thead>
    <tbody>
    <% for(var i = 0;i < locals.posts.length;i++){ %>
    <tr>
        <td><%= locals.posts[i].bid %></td>
        <td colspan="5"><a href="/post/detail/<%= locals.posts[i].bid %>"
                           target="_blank"><%= locals.posts[i].title %></a></td>
        <td><%= locals.posts[i].author %></td>
        <td><%= locals.posts[i].create_time %></td>
        <td><a class="btn btn-success" href="/admin/edit/<%= locals.posts[i].bid %>">编辑</a>|<a class="btn btn-danger"
                                                                                               href="/post/delete/<%= locals.posts[i].bid %>">删除</a>
        </td>
    </tr>
    <% } %>
    </tbody>
</table>